{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*\\..+)", "dest": "/public/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/public/index.html" }
  ]
}
